<div class="row">
    <div class="col-xs-4 col-md-3 col-lg-2">
            {{bs-form-element controlType="text" name="customerName" placeholder="Enter Your Name" value=customerName}}
    </div>
    <div class="col-xs-4 col-md-3 col-lg-2">
        {{bs-form-element controlType="text" name="customerPhone" placeholder="Enter Your Phone" value=customerPhone key-down=keyDown}}
    </div>
    <div class="col-xs-1">
        {{#bs-button-group}}
            {{#bs-button action="createOrder" class="btn btn-primary" disabled=isEmptyRequiredField}}
                Create Order
            {{/bs-button}}
        {{/bs-button-group}}
    </div>
</div>